            <!-- Profile for generating all maven artifacts and documentation. -->
            <build>
                <plugins>

                    <!--yeoman-maven-plugin -->
                    <plugin>    
                        <groupId>com.github.trecloux</groupId>
                        <artifactId>yeoman-maven-plugin</artifactId>
                        <version>0.5</version>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>build</goal>
                                </goals>
                            </execution>
                        </executions>
