                                    <artifactId>zeppelin-web</artifactId>
                                    <type>war</type>
                                    <targetPath>zeppelin</targetPath>
                                </overlay>
                            </overlays>
                            <failOnMissingWebXml>false</failOnMissingWebXml>
                            <webResources>
                                <resource>
                                    <directory>yo/dist</directory>
                                </resource>
                            </webResources>
                        </configuration>
                    </plugin>
                    <plugin>
                        <artifactId>maven-clean-plugin</artifactId>
                        <version>2.5</version>
                        <configuration>
                            <filesets>
                                <fileset>
                                    <directory>yo/dist</directory>
                                </fileset>
                            </filesets>
                        </configuration>
                    </plugin>

                </plugins>
            </build>
